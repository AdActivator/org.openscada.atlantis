<project name="libs">
    <description>
    	Providing common build targets for all other ant-scripts
    </description>
	<dirname property="builddir" file="${ant.file.libs}"/>

	<property file="${builddir}/../config/local.properties"/>
		
	<taskdef resource="svntask.properties">
		<classpath>
			<pathelement location="${builddir}/svnant.jar"/>
			<pathelement location="${builddir}/svnClientAdapter.jar"/>
			<pathelement location="${builddir}/svnjavahl.jar"/>
		</classpath>
	</taskdef>
	
	<taskdef resource="org/apache/maven/artifact/ant/antlib.xml" uri="antlib:org.apache.maven.artifact.ant">
		<classpath>
			<path path="${builddir}/maven-ant-tasks-2.0.9.jar"/>
		</classpath>
	</taskdef>

</project>