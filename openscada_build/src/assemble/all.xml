<assembly>
	<id>${ci.build.id}all</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<moduleSets>
		<moduleSet>
			<includes>
				<include>*:*</include>
			</includes>
			<binaries>
				<includeDependencies>true</includeDependencies>
				<outputDirectory>bin</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<outputDirectory>lib</outputDirectory>
						<excludes>
							<exclude>org.openscada.atlantis*</exclude>
						</excludes>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
		<moduleSet>
			<includes>
				<include>*:*</include>
			</includes>
			<excludes>
				<!--  I don't know why, but the sources are missing in build -->
				<exclude>
					org.openscada.atlantis:org.openscada.atlantis.da.client.samples
				</exclude>
			</excludes>
			<binaries>
				<attachmentClassifier>javadoc</attachmentClassifier>
				<unpack>false</unpack>
				<outputDirectory>doc</outputDirectory>
				<includeDependencies>false</includeDependencies>
			</binaries>
		</moduleSet>
		<moduleSet>
			<includes>
				<include>*:*</include>
			</includes>
			<binaries>
				<attachmentClassifier>sources</attachmentClassifier>
				<unpack>false</unpack>
				<outputDirectory>src</outputDirectory>
				<includeDependencies>false</includeDependencies>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>