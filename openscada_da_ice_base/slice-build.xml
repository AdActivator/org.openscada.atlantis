<project name="ice-build-da" default="default">
    <description>
            OpenSCADA Atlantis Project
    </description>
	
	<property name="build.root" location="../builder_atlantis"/>
	<import file="${build.root}/lib/lib.xml"/>
	
	<!-- ================================= 
          target: default              
         ================================= -->
    <target name="default" depends="" description="--> Build SLICE">
		<delete dir="gensrc"/>
		<mkdir dir="gensrc"/>
    	<slice2java outputdir="gensrc" casesensitive="true">
			<meta value="true"/>
			<fileset dir="${source.root}/openscada_interface_ice">
				<include name="da/*.ice"/>
			</fileset>
		</slice2java>
    </target>

</project>