<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.openscada.aurora</groupId>
	<artifactId>org.openscada.aurora</artifactId>
	<packaging>pom</packaging>
	<name>OpenSCADA-Common</name>
	<version>0.12.0-SNAPSHOT</version>
	
	<modules>
		<module>../openscada_utils</module>
		<module>../org.openscada.aurora.slice.plugin</module>
	</modules>
	
	<distributionManagement>
		<repository>
			<id>openscada-releases</id>
			<name>openscada-releases</name>
			<url>http://carlton.local:8080/artifactory/openscada-releases/</url>
		</repository>
		<snapshotRepository>
			<id>openscada-snapshots</id>
			<name>openscada-snapshots</name>
			<url>http://carlton.local:8080/artifactory/openscada-snapshots/</url>
		</snapshotRepository>
	</distributionManagement>

	<repositories>
		<repository>
			<id>openscada-repos</id>
			<name>openscada-repos</name>
			<url>http://carlton.local:8080/artifactory/openscada-repos/</url>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
				<checksumPolicy>warn</checksumPolicy>
			</releases>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
				<checksumPolicy>warn</checksumPolicy>
			</snapshots>
		</repository>
	</repositories>

	<scm>
		<connection>scm:svn:https://svn.inavare.net/openscada/modules/atlantis/trunk/org.openscada.aurora</connection>
		<developerConnection>scm:svn:https://svn.inavare.net/openscada/modules/atlantis/trunk/org.openscada.aurora</developerConnection>
		<url>https://svn.inavare.net/openscada/modules/atlantis/trunk/org.openscada.aurora</url>
	</scm>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>verify</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
			</plugin>
		</plugins>
	</reporting>
</project>