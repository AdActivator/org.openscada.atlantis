<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.openscada.da.client.test.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="OpenSCADA DA Test"
            class="org.openscada.da.client.test.Perspective"
            id="org.openscada.da.client.test.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.openscada.da.client.test"
            name="OpenSCADA DA"/>
      <view
            category="org.openscada.da.client.test"
            class="org.openscada.da.client.test.views.HiveView"
            icon="icons/sample.gif"
            id="org.openscada.da.client.test.views.HiveView"
            name="Hive View"/>
      <view
            allowMultiple="true"
            category="org.openscada.da.client.test"
            class="org.openscada.da.client.test.views.DataItemView"
            icon="icons/sample.gif"
            id="org.openscada.da.client.test.views.DataItemView"
            name="Data Item View"/>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.eclipse.ui.file.exit"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+X">
      </key>
   </extension>
   <extension
         id="product"
         name="OpenSCADA DA Test Client"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.openscada.da.client.test.application"
            name="OpenSCADA DA Test Client">
         <property
               name="aboutText"
               value="%aboutText"/>
         <property
               name="windowImages"
               value="icons/sample2.gif"/>
         <property
               name="aboutImage"
               value="product_lg.gif"/>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension targetID="org.openscada.da.client.test.perspective">
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
   </extension>
   <extension
         point="org.eclipse.ui.viewActions">
      <viewContribution
            id="org.openscada.da.client.test.TestViewAction"
            targetID="org.openscada.da.client.test.views.HiveView">
         <action
               class="org.openscada.da.client.test.actions.WatchItemAction"
               id="org.openscada.da.client.test.actions.WatchItemAction"
               label="Watch"
               menubarPath="additions"
               style="push"
               toolbarPath="additions"
               tooltip="Watch selected item">
            <enablement>
               <objectClass name="org.openscada.da.client.test.impl.HiveItem"/>
            </enablement>
         </action>
         <action
               class="org.openscada.da.client.test.actions.ConnectHiveAction"
               id="org.openscada.da.client.test.actions.ConnectHiveAction"
               label="Connect"
               menubarPath="additions"
               style="push"
               toolbarPath="additions"
               tooltip="Connect to Hive">
            <enablement>
               <and>
                  <objectClass name="org.openscada.da.client.test.impl.HiveConnection"/>
               </and>
            </enablement>
         </action>
      </viewContribution>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="false"
            id="org.openscada.da.client.test.actions.ConnectHiveAction"
            objectClass="org.openscada.da.client.test.impl.HiveConnection">
         <action
               class="org.openscada.da.client.test.actions.ConnectHiveAction"
               id="org.openscada.da.client.test.actions.ConnectHiveAction"
               label="Connect"
               menubarPath="additions"/>
      </objectContribution>
      <objectContribution
            adaptable="false"
            id="org.openscada.da.client.test.popupMenus.WatchAction"
            objectClass="org.openscada.da.client.test.impl.HiveItem">
         <action
               class="org.openscada.da.client.test.actions.WatchItemAction"
               id="org.openscada.da.client.test.actions.WatchItemAction"
               label="Watch"
               menubarPath="additions"/>
      </objectContribution>
   </extension>

</plugin>
