<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="org.openscada.core.ui.connection.discoverer" name="connectionDiscoverer" schema="schema/org.openscada.core.ui.connection.discoverer.exsd"/>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="org.openscada.core.ui.connection.views.ConnectionView"
            id="org.openscada.core.ui.connection.ConnectionView"
            name="Connections"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewer
            viewerId="org.openscada.core.ui.connection.ConnectionView">
         <options>
            <property
                  name="org.eclipse.ui.navigator.hideLinkWithEditorAction"
                  value="true">
            </property>
         </options>
         <popupMenu
               allowsPlatformContributions="true"
               id="org.openscada.core.ui.connection.ConnectionView#PopupMenu">
            <insertionPoint
                  name="additions"
                  separator="true">
            </insertionPoint>
         </popupMenu>
      </viewer>
      <viewerContentBinding
            viewerId="org.openscada.core.ui.connection.ConnectionView">
         <includes>
            <contentExtension
                  isRoot="true"
                  pattern="org.openscada.core.ui.connection.provider">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="org.openscada.core.ui.connection.views.ConnectionContentProvider"
            id="org.openscada.core.ui.connection.provider"
            labelProvider="org.openscada.core.ui.connection.views.ConnectionLabelProvider"
            name="Connection Provider"
            priority="normal"
            providesSaveables="false">
         <triggerPoints>
            <or>
               <instanceof
                     value="org.openscada.core.ui.connection.Root">
               </instanceof>
               <instanceof
                     value="org.openscada.core.ui.connection.ConnectionDiscovererBean">
               </instanceof>
            </or>
         </triggerPoints>
         <possibleChildren>
            <or>
               <instanceof
                     value="org.openscada.core.ui.connection.ConnectionDiscovererBean">
               </instanceof>
               <instanceof
                     value="org.openscada.core.ui.connection.ConnectionHolder">
               </instanceof>
            </or>
         </possibleChildren>
      </navigatorContent>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            class="org.openscada.core.ui.connection.wizards.AddConnectionWizard"
            hasPages="true"
            id="org.openscada.core.ui.connection.AddConnection"
            name="Add Connection"
            project="false">
         <selection
               class="org.openscada.core.ui.connection.ConnectionStore">
         </selection>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="false"
            id="org.openscada.core.ui.connection.ConnectionStore"
            objectClass="org.openscada.core.ui.connection.ConnectionDiscovererBean">
         <action
               class="org.openscada.core.ui.connection.actions.AddConnectionAction"
               enablesFor="1"
               id="org.openscada.core.ui.connection.action1"
               label="Add Connection"
               menubarPath="additions">
            <enablement>
               <objectState
                     name="isStore"
                     value="true">
               </objectState>
            </enablement>
         </action>
      </objectContribution>
      <objectContribution
            adaptable="false"
            id="org.openscada.core.ui.connection.ConnectionHolder"
            objectClass="org.openscada.core.ui.connection.ConnectionHolder">
         <action
               class="org.openscada.core.ui.connection.actions.DeleteConnectionAction"
               id="org.openscada.core.ui.connection.action.DeleteConnectionAction"
               label="Delete Connection"
               menubarPath="additions">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.openscada.core.ui.connection.ConnectionView#PopupMenu">
         <command
               commandId="org.openscada.core.ui.connection.command.OpenConnection"
               label="Connect"
               style="push">
            <visibleWhen>
               <and>
                  <iterate
                        operator="and">
                     <or>
                        <adapt
                              type="org.openscada.core.ui.connection.ConnectionHolder">
                        </adapt>
                        <instanceof
                              value="org.openscada.core.ui.connection.ConnectionHolder">
                        </instanceof>
                     </or>
                  </iterate>
               </and>
            </visibleWhen>
         </command>
         <command
               commandId="org.openscada.core.ui.connection.command.CloseConnection"
               label="Disconnect"
               style="push">
            <visibleWhen>
               <and>
                  <iterate
                        operator="and">
                     <or>
                        <adapt
                              type="org.openscada.core.ui.connection.ConnectionHolder">
                        </adapt>
                        <instanceof
                              value="org.openscada.core.ui.connection.ConnectionHolder">
                        </instanceof>
                     </or>
                  </iterate>
               </and>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.openscada.core.ui.connection.commands.OpenConnection"
            id="org.openscada.core.ui.connection.command.OpenConnection"
            name="Open Connection">
      </command>
      <command
            defaultHandler="org.openscada.core.ui.connection.commands.CloseConnection"
            id="org.openscada.core.ui.connection.command.CloseConnection"
            name="Close Connection">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="org.openscada.core.ui.connection.handler.OpenConnection">
      </handler>
      <handler
            commandId="org.openscada.core.ui.connection.handler.CloseConnection">
      </handler>
   </extension>

