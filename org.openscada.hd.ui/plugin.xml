<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.openscada.hd.ui.perspectives.PerspectiveFactory"
            id="org.openscada.hd.ui.perspective"
            name="HD">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <perspectiveShortcut
               id="org.openscada.hd.ui.perspective">
         </perspectiveShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.openscada.hd.ui.perspective">
         <view
               closeable="true"
               id="org.openscada.hd.ui.ConnectionView"
               minimized="false"
               moveable="true"
               ratio="0.25"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
         <view
               closeable="true"
               id="org.openscada.hd.ui.QueryControlView"
               minimized="false"
               moveable="true"
               ratio="0.25"
               relationship="bottom"
               relative="org.openscada.hd.ui.ConnectionView"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
         <view
               closeable="true"
               id="org.openscada.hd.ui.QueryDataView"
               minimized="false"
               moveable="true"
               ratio="0.75"
               relationship="stack"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="org.openscada.hd.ui.category"
            class="org.openscada.hd.ui.views.ConnectionView"
            fastViewWidthRatio="0.25"
            id="org.openscada.hd.ui.ConnectionView"
            name="Connections"
            restorable="true">
      </view>
      <category
            id="org.openscada.hd.ui.category"
            name="Historical Data">
      </category>
      <view
            allowMultiple="false"
            category="org.openscada.hd.ui.category"
            class="org.openscada.hd.ui.views.QueryControlView"
            id="org.openscada.hd.ui.QueryControlView"
            name="Query Control"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="org.openscada.hd.ui.category"
            class="org.openscada.hd.ui.views.QueryDataView"
            id="org.openscada.hd.ui.QueryDataView"
            name="Query Data View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="false"
            id="org.openscada.hd.ui.oc.ConnectionEntry"
            objectClass="org.openscada.hd.ui.data.ConnectionEntryBean">
         <action
               class="org.openscada.hd.ui.actions.DisconnectAction"
               enablesFor="1"
               id="org.openscada.hd.ui.DisconnectAction"
               label="Disconnect"
               menubarPath="additions">
         </action>
         <action
               class="org.openscada.hd.ui.actions.ConnectAction"
               enablesFor="1"
               id="org.openscada.hd.ui.ConnectAction"
               label="Connect"
               menubarPath="additions">
         </action>
      </objectContribution>
      <objectContribution
            adaptable="false"
            id="org.openscada.hd.ui.oc.HistoricalItemEntry"
            objectClass="org.openscada.hd.ui.data.HistoricalItemEntryBean">
         <action
               class="org.openscada.hd.ui.actions.CreateQueryAction"
               enablesFor="1"
               id="org.openscada.hd.ui.CreateQueryAction"
               label="Create Query"
               menubarPath="additions">
         </action>
      </objectContribution>
      <objectContribution
            adaptable="false"
            id="org.openscada.hd.ui.oc.QueryBufferBean"
            objectClass="org.openscada.hd.ui.data.QueryBufferBean">
         <action
               class="org.openscada.hd.ui.actions.CloseQuery"
               enablesFor="1"
               id="org.openscada.hd.ui.CloseQueryAction"
               label="Close"
               menubarPath="additions">
         </action>
         <action
               class="org.openscada.hd.ui.actions.RemoveQuery"
               enablesFor="1"
               id="org.openscada.hd.ui.RemoveQueryAction"
               label="Remove"
               menubarPath="additions">
         </action>
      </objectContribution>
   </extension>

</plugin>
