<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.openscada</groupId>
	<artifactId>utils</artifactId>
	<version>0.12.0-SNAPSHOT</version>
	<name>OpenSCADA Utilities</name>
	<description>Utility classes for use throughout the OpenSCADA project</description>
	<distributionManagement>
		<snapshotRepository>
			<id>openscada-atlantis-integration-local</id>
			<name>openscada-atlantis-integration-local</name>
			<url>http://carlton.local:8080/artifactory/openscada-atlantis-integration-local/</url>
		</snapshotRepository>
	</distributionManagement>
	<scm>
		<connection>scm:svn:https://svn.inavare.net/openscada/modules/atlantis/trunk/openscada_utils</connection>
		<developerConnection>scm:svn:https://svn.inavare.net/openscada/modules/atlantis/trunk/openscada_utils</developerConnection>
		<url>https://svn.inavare.net/openscada/modules/atlantis/trunk/openscada_utils</url>
	</scm>
	<build>
		<finalName>
			${project.groupId}.${project.artifactId}-${project.version}
		</finalName>
		<sourceDirectory>${basedir}/src</sourceDirectory>
		<testSourceDirectory>${basedir}/testsrc
		</testSourceDirectory>
		<outputDirectory>${basedir}/bin</outputDirectory>
		<testOutputDirectory>${basedir}/bin
		</testOutputDirectory>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<repositories>
		<repository>
			<id>openscada-atlantis</id>
			<name>openscada-atlantis</name>
			<url>http://carlton.local:8080/artifactory/openscada-atlantis-integration-local/</url>
		</repository>
	</repositories>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>[4.0.0,5.0.0)</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>[1.2.0,2.0.0)</version>
			<scope>compile</scope>
			<exclusions>
				<exclusion>
					<artifactId>jms</artifactId>
					<groupId>javax.jms</groupId>
				</exclusion>
				<exclusion>
					<artifactId>jmxtools</artifactId>
					<groupId>com.sun.jdmk</groupId>
				</exclusion>
				<exclusion>
					<artifactId>jmxri</artifactId>
					<groupId>com.sun.jmx</groupId>
				</exclusion>
				<exclusion>
					<artifactId>mail</artifactId>
					<groupId>javax.mail</groupId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>
</project>