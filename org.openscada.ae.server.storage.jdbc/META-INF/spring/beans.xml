<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:osgi="http://www.springframework.org/schema/osgi"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
  http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd">

	<bean id="propertyPlaceholder"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location"
			value="classpath:org/openscada/ae/server/storage/jdbc/configuration/ae.properties" />
	</bean>

	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName"
			value="${org.openscada.ae.server.storage.jdbc.driver}" />
		<property name="url" value="${org.openscada.ae.server.storage.jdbc.url}" />
		<property name="username"
			value="${org.openscada.ae.server.storage.jdbc.username}" />
		<property name="password"
			value="${org.openscada.ae.server.storage.jdbc.password}" />
	</bean>

	<bean id="hibernateProperties"
		class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="location"
			value="classpath:org/openscada/ae/server/storage/jdbc/configuration/hibernate.properties" />
	</bean>

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="hibernateProperties" ref="hibernateProperties" />
		<property name="mappingResources">
			<list>
				<value>org/openscada/ae/server/storage/jdbc/internal/ae.hbm.xml
				</value>
			</list>
		</property>
	</bean>

	<bean name="jdbcStorageDAO"
		class="org.openscada.ae.server.storage.jdbc.internal.JdbcStorageDAOImpl">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<bean name="jdbcStorage" class="org.openscada.ae.server.storage.jdbc.JdbcStorage"
		init-method="start" destroy-method="stop">
		<property name="jdbcStorageDAO" ref="jdbcStorageDAO" />
	</bean>
</beans>
