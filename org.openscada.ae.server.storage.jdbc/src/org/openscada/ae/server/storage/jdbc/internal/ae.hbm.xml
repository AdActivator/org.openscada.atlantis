<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.openscada.ae.server.storage.jdbc.internal">
	<class name="MutableEvent" table="org_openscada_ae_server_storage_events"
		mutable="true" dynamic-insert="true" dynamic-update="true">

		<!-- always available fields -->
		<id name="id"
			type="org.openscada.ae.server.storage.jdbc.internal.UUIDHibernateType">
			<column name="ID" length="36" not-null="true" />
			<generator class="assigned" />
		</id>
		<property name="sourceTimestamp">
			<column name="SOURCE_TIMESTAMP" not-null="true" />
		</property>
		<property name="entryTimestamp">
			<column name="ENTRY_TIMESTAMP" not-null="true" />
		</property>

		<!-- fields which are saved in main table -->
		<property name="type">
			<column name="TYPE" length="255" not-null="true" />
		</property>
		<property name="source">
			<column name="SOURCE" length="255" not-null="true" />
		</property>
		<property name="priority">
			<column name="PRIORITY" />
		</property>

		<!-- all other attribs are in a separate table -->
		<map name="attributes" table="org_openscada_ae_server_storage_event_attribs"
			access="field" cascade="all" lazy="false" fetch="join">
			<key column="ID" />
			<map-key type="string" column="KEY" />
			<element
				type="org.openscada.ae.server.storage.jdbc.internal.VariantHibernateType">
				<column name="VARIANT_TYPE" length="32" />
				<column name="VALUE_STRING" length="32000" />
				<column name="VALUE_INTEGER" />
				<column name="VALUE_DOUBLE" />
			</element>
		</map>

	</class>
</hibernate-mapping>