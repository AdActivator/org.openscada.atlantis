<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.openscada.ae.server.storage.jdbc.internal">
	<class name="MutableEvent" table="org_openscada_ae_server_storage_events"
		mutable="true" dynamic-insert="true" dynamic-update="true">

		<!-- always available fields -->
		<id name="id"
			type="org.openscada.ae.server.storage.jdbc.internal.UUIDHibernateType">
			<column name="ID" length="36" sql-type="CHAR(36)" not-null="true" />
			<generator class="assigned" />
		</id>
		<property name="sourceTimestamp">
			<column name="SOURCE_TIMESTAMP" not-null="true" index="idx_org_openscada_ae_server_storage_1" />
		</property>
		<property name="entryTimestamp">
			<column name="ENTRY_TIMESTAMP" not-null="true" index="idx_org_openscada_ae_server_storage_2" />
		</property>

		<!-- fields which are saved in main table -->
		<property name="monitorType">
			<column name="MONITOR_TYPE" length="32" not-null="false" />
		</property>
		<property name="eventType">
			<column name="EVENT_TYPE" length="32" not-null="false" />
		</property>
		<property name="value" type="org.openscada.ae.server.storage.jdbc.internal.VariantHibernateType" not-null="false">
			<column name="VALUE_TYPE" length="32" />
			<column name="VALUE_STRING" length="32000" />
			<column name="VALUE_INTEGER" />
			<column name="VALUE_DOUBLE" />
		</property>
		<property name="message">
			<column name="MESSAGE" length="255" not-null="false" />
		</property>
		<property name="messageCode">
			<column name="MESSAGE_CODE" length="255" not-null="false" />
		</property>
		<property name="priority">
			<column name="PRIORITY" />
		</property>
		<property name="source">
			<column name="SOURCE" length="255" not-null="false" />
		</property>
		<property name="actorName">
			<column name="ACTOR_NAME" length="128" not-null="false" />
		</property>
		<property name="actorType">
			<column name="ACTOR_TYPE" length="32" not-null="false" />
		</property>

		<!-- all other attribs are in a separate table -->
		<map name="attributes" table="org_openscada_ae_server_storage_event_attribs"
			access="field" cascade="all" lazy="false" fetch="join">
			<key foreign-key="fk_org_openscada_ae_server_storage_1">
				<column name="ID" length="36" sql-type="CHAR(36)" />
			</key>
			<map-key type="string" column="KEY" />
			<element
				type="org.openscada.ae.server.storage.jdbc.internal.VariantHibernateType">
				<column name="VARIANT_TYPE" length="32" />
				<column name="VALUE_STRING" length="32000" />
				<column name="VALUE_INTEGER" />
				<column name="VALUE_DOUBLE" />
			</element>
		</map>
	</class>
	
</hibernate-mapping>