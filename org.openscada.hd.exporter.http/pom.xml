<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.openscada.atlantis</groupId>
	<artifactId>org.openscada.hd.exporter.http</artifactId>
	<version>0.15.0-SNAPSHOT</version>
	<packaging>jar</packaging>

	<build>
		<finalName>${project.artifactId}-${project.version}</finalName>
		<sourceDirectory>src</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<testFailureIgnore>true</testFailureIgnore>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.openscada.external</groupId>
			<artifactId>org.openscada.external.com.google.gson</artifactId>
			<version>1.4</version>
			<scope>compile</scope>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>inavare</id>
			<repositories>
				<repository>
					<id>inavare-external</id>
					<url>http://buildserver.local:8080/artifactory/repo</url>
					<snapshots>
						<enabled>true</enabled>
					</snapshots>
					<releases>
						<enabled>true</enabled>
					</releases>
				</repository>
			</repositories>
			<distributionManagement>
				<repository>
					<id>inavare-external</id>
					<name>inavare-external</name>
					<url>${inavare.external.repository}</url>
				</repository>
				<snapshotRepository>
					<id>inavare-external</id>
					<name>inavare-external</name>
					<url>${inavare.external.repository}</url>
				</snapshotRepository>
			</distributionManagement>
		</profile>
	</profiles>
</project>