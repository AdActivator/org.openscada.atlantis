<?xml version="1.0" encoding="UTF-8"?>

<!-- sample configuration -->

<components:root
	xmlns:components="http://openscada.org/DA/ExecServer/Commands"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://openscada.org/DA/ExecServer/Commands schema/commands.xsd ">

	<components:commandQueue
		commandQueueClass="org.openscada.da.server.exec.standard.StandardCommandQueue"
		commandQueueName="queue1">
		<components:command
			commandClass="org.openscada.da.server.exec.nagios.NagiosCommand"
			commandName="cmd1"
			minPeriod="4000">
			<components:commandLine>/usr/lib/nagios/plugins/check_ping -H localhost -w 10,30% -c 20,50% -p 5 -t 1000</components:commandLine>
		</components:command>
		
		<components:command
			commandClass="org.openscada.da.server.exec.nagios.NagiosCommand"
			commandName="cmd2"
			minPeriod="4000">
			<components:commandLine>/usr/lib/nagios/plugins/check_fping localhost 10 20</components:commandLine>
		</components:command>
		
		<components:command
			commandClass="org.openscada.da.server.exec.nagios.NagiosCommand"
			commandName="cmd3"
			minPeriod="1000">
			<components:commandLine>/usr/lib/nagios/plugins/check_procs</components:commandLine>
		</components:command>
		
	</components:commandQueue>

</components:root>
