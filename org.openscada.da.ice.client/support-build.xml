<?xml version="1.0"?>
<!-- ====================================================================== 
     openscada_da_client_ice_plugin_wrapper    
     Support build file                                                  
     ====================================================================== -->
<project name="openscada_da_client_ice_plugin_wrapper" default="default" basedir=".">

	<property name="libfile" location="../openscada_pde_build/lib/build.xml"/>
	<import file="${libfile}"/>
	
	<property name="libjar" location="./lib.jar"/>
	
    <description>
            Support build file
    </description>

    <!-- ================================= 
          target: default              
         ================================= -->
    <target name="default" depends="genjar, genjar-maven" description="--> Support build file">
    </target>
    	
   	<!-- ================================= 
          target: genjar              
         ================================= -->
    <target name="genjar" depends="" description="--> Generate the JAR file" unless="use.maven.dependencies">
		<openscada.pde.import-module.init/>
		<openscada.pde.import-module.add-module name="da-client-ice"/>
		<openscada.pde.import-module.finalize destfile="${libjar}"/>
    </target>

    <target name="genjar-maven" depends="" description="--> Generate the JAR file" if="use.maven.dependencies">
		<openscada.pde.import-module.init/>
    	<openscada.pde.import-module.add-maven-dependency groupid="org.openscada.atlantis" groupIdBase="org.openscada.atlantis" artifactid="org.openscada.atlantis.da.client.ice" version="${build.version.maven}"/>
		<openscada.pde.import-module.finalize destfile="${libjar}"/>
    </target>

</project>
