<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.openscada.ae.ui.perspectives.Perspective"
            icon="icons/releng_gears.gif"
            id="org.openscada.ae.ui.perspectives.perspective"
            name="AE">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <perspectiveShortcut
               id="org.openscada.ae.ui.perspectives.perspective">
         </perspectiveShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.openscada.ae.ui.perspectives.perspective">
         <view
               closeable="true"
               id="org.openscada.core.ui.connection.ConnectionView"
               minimized="false"
               moveable="true"
               ratio="0.35"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="org.openscada.ae.ui.category"
            class="org.openscada.ae.ui.views.ConnectionsView"
            id="org.openscada.ae.ui.views.ConnectionsView"
            name="Connections"
            restorable="true">
      </view>
      <category
            id="org.openscada.ae.ui.category"
            name="OpenSCADA AE">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="false"
            id="org.openscada.ae.ui.oc.ConnectionEntry"
            objectClass="org.openscada.ae.ui.data.ConnectionEntryBean">
         <action
               class="org.openscada.ae.ui.actions.DisconnectAction"
               enablesFor="1"
               id="org.openscada.ae.ui.actions.DisconnectAction"
               label="Disconnect"
               menubarPath="additions">
         </action>
         <action
               class="org.openscada.ae.ui.actions.ConnectAction"
               enablesFor="1"
               id="org.openscada.ae.ui.actions.ConnectAction"
               label="Connect"
               menubarPath="additions">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.openscada.ae.ui.category"
            name="OpenSCADA AE">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.openscada.ae.ui.category"
            name="OpenSCADA AE">
      </category>
   </extension>

</plugin>
