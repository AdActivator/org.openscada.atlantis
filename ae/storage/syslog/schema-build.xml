<?xml version="1.0"?>

<project name="ae_syslog_server" default="main" basedir=".">

	<taskdef name="xmlbean" classname="org.apache.xmlbeans.impl.tool.XMLBean">
		 <classpath id="xmlbeanspath">
            <pathelement location="../ext_xmlbeans/xbean.jar"/>
            <pathelement location="../ext_xmlbeans/jsr173_1.0_api.jar"/>
         </classpath>
	</taskdef>

	<target name="clean">
		<delete file="SyslogStorageSchema.jar"/>
	</target>
	<target name="main">
		<xmlbean
			schema="schema/SyslogStorage.xsd"
			destfile="SyslogStorageSchema.jar"
			javasource="1.5"
            classpathref="xmlbeanspath"
			>
        </xmlbean>
  	</target>
  
</project>
