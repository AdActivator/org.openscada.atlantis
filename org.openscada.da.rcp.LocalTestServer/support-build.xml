<?xml version="1.0"?>
<!-- ====================================================================== 
     openscada_da_rcp_localtestserver
     Support build file                                                  
     ====================================================================== -->
<project name="openscada_da_rcp_localtestserver" default="default" basedir=".">
	
	<property name="libfile" location="../openscada_build/lib/build.xml"/>
	<import file="${libfile}"/>
	
    <description>
            Support build file
    </description>

    <!-- ================================= 
          target: default              
         ================================= -->
    <target name="default" depends="genjar" description="--> Support build file">
    </target>
    	
   	<!-- ================================= 
          target: genjar              
         ================================= -->
    <target name="genjar" depends="" description="--> Generate the JAR file">
		<openscada.pde.import-module.init/>
		<openscada.pde.import-module.add-module name="da-server-simulation"/>
		<openscada.pde.import-module.add-module name="da-server-net"/>
		<openscada.pde.import-module.finalize destfile="openscada_net_server_sim.jar"/>
		<openscada.pde.import-module.init/>
		<openscada.pde.import-module.add-module name="da-server-test"/>
		<openscada.pde.import-module.add-module name="da-server-net"/>
		<openscada.pde.import-module.finalize destfile="openscada_net_server_test.jar"/>
    </target>


</project>
